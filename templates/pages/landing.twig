    <!-- Feature Section -->
    <section class="features">
        {% for feature in features %}
        <div class="feature-card">
            <h3>{{ feature.title }}</h3>
            <p>{{ feature.text }}</p>
        </div>
        {% endfor %}
    </section>
</div>
{% endblock %}
