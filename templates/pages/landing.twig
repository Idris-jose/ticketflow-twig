{% extends "base.twig" %}

{% block content %}
<div class="relative bg-gradient min-h-screen">
    <!-- Decorative Circles -->
    <div class="circle circle-blue"></div>
    <div class="circle circle-orange"></div>

    <!-- Hero Section -->
    <section class="container">
        <div>
            <h1>
                Ticket<span class="text-primary">Flow</span>
            </h1>
            <p class="text-gray text-lg">
